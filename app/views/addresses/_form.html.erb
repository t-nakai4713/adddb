<%= form_for(@address) do |f| %>
<div class="field">
 <label>IPアドレス</label>
 <P><%= @address.ipadd  %></P>

  <% if @address.status == 0 %>
<div class="form-group">
  <label>利用用途</label>
  <%= f.text_field :use, class: 'form-control'  %></P>
</div>
  <%= f.hidden_field :dbtype, value: 1  %>
  <%= f.hidden_field :status, value: 1 %> <br>
  <%= f.submit '利用開始', class: 'btn btn-success btn-lg' %>
  <%= link_to '戻る', addresses_path, class: 'btn btn-secondary btn-lg'  %>

  <% else %>
  <div class="form-group">
   <label>利用用途</label></br>
   <%= @address.use  %></P>
  </div>
  <%= f.hidden_field :use, value: "free"  %>
  <%= f.hidden_field :dbtype, value: 1  %>
  <%= f.hidden_field :status, value: 0 %>
  <%= f.submit '廃止する', class: 'btn btn-danger btn-lg' %>
  <%= link_to '戻る', addresses_path, class: 'btn btn-secondary btn-lg'  %>

  <% end %>

  <br>
</div>
<% end %>
