<!DOCTYPE html>
<html>
<head>
  <title>アドレス管理DB</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
      <%= link_to "アドレス管理DB", root_path, class: "navbar-brand" %>
          <ul>
        <%# link要素1 %>
            <li class="nav-item">
                <%= link_to "管理画面", addresses_path, class: "nav-link" %>
            </li>


	<% if user_signed_in? %>
        <%# link要素2 %>
            <li class="nav-item">
                <%= link_to "マイページ", edit_user_registration_path, class: "nav-link" %>
            </li>
        <%# link要素3 %>
            <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>

	<% else %>
        <%# link要素2 %>
            <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
            </li>
        <%# link要素3 %>
            <li class="nav-item">
                <%= link_to "サインアップ", new_user_registration_path, class: "nav-link" %>
            </li>
	<% end %>
          </ul>
      </div>
    </nav>
 </header>

<%= yield %>

</body>
</html>
